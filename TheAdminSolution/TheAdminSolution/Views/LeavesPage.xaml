<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="TheAdminSolution.Views.LeavesPage"
             Title="Leaves">

    <ListView ItemsSource="{Binding Leaves}"
              ItemSelected="ListView_ItemSelected"
              HasUnevenRows="True"
              SeparatorVisibility="None">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Frame Margin="8, 4"
                           HasShadow="True"
                           BackgroundColor="#E4DEED"
                           CornerRadius="5"
                           Padding="0">
                        <StackLayout>
                            <Label  Margin="8"
                                   FontAttributes="Bold">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding Status, StringFormat='({0})'}"
                                              TextColor="Green"/>
                                        <Span Text=" "/>
                                        <Span Text="{Binding Email}"
                                              TextColor="Black"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label 
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               Margin="8, 0, 8, 0"
                                Text="{Binding Leave}"
                                TextDecorations="Underline"/>
                            <Label HorizontalOptions="EndAndExpand"
                                   Margin="8"
                                   FontSize="11">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding StartDate}"/>
                                        <Span Text=" - "/>
                                        <Span Text="{Binding EndDate}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>
                        
                    </Frame>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>